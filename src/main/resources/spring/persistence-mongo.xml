    <bean id="mongoClient" class="org.springframework.data.mongodb.core.MongoClientFactoryBean">
        <property name="host" value="${mongo.host}" />
        <property name="port" value="${mongo.port}" />
    </bean>

    <bean id="morphia" class="com.beautysight.pplogs.infrastructure.persistence.mongo.base.MorphiaFactoryBean">
        <property name="singleton" value="true"/>
        <property name="ignoreInvalidClasses" value="true"/>
        <property name="mapPackages">
            <list>
                <value>com.beautysight.pplogs.domain</value>
            </list>
        </property>
    </bean>

    <bean id="datastore" class="com.beautysight.pplogs.infrastructure.persistence.mongo.base.DataStoreFactoryBean">
        <property name="singleton" value="true"/>
        <property name="morphia" ref="morphia"/>
        <property name="mongo" ref="mongoClient"/>
        <property name="dbName" value="${mongo.db.name}"/>
    </bean>

</beans>